<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bc"
    android:layout_height="match_parent"
    tools:context=".UserDetailsActivity">
    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputYourName"
            style="@style/parent"
            android:layout_marginTop="@dimen/viewsMargin">
            <EditText
                android:id="@+id/etName"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Your Name..."
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPhoneNumber"
            style="@style/parent"
            android:layout_marginTop="@dimen/viewsMargin">
            <EditText
                android:id="@+id/etPhone"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Your Phone Number..."
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputCountyName"
            style="@style/parent"
            android:layout_marginTop="@dimen/viewsMargin">
            <EditText
                android:id="@+id/etCounty"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="County Name..."
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputSubCountyName"
            style="@style/parent"
            android:layout_marginTop="@dimen/viewsMargin">
            <EditText
                android:id="@+id/etSubCounty"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Sub County Name..."
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/cropGrowing"
                    android:text="Crop Growing"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/animalRearing"

                    android:text="Animal Rearing"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Small Scale"
                    android:id="@+id/smallScale"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Large Scale"
                    android:id="@+id/largeScale"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
        <Button
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:text="   Finish Account Setup   "
            android:background="@drawable/input_outline"
            android:padding="9dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/White"
            android:id="@+id/btnUpdate"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>